BEGIN TRANSACTION;
CREATE TABLE IF NOT EXISTS "workouts" (
	"ID"	INTEGER UNIQUE,
	"name"	TEXT NOT NULL UNIQUE,
	"day"	TEXT NOT NULL,
	PRIMARY KEY("ID" AUTOINCREMENT)
);
CREATE TABLE IF NOT EXISTS "exercises" (
	"ID"	INTEGER UNIQUE,
	"name"	TEXT,
	"sets"	TEXT,
	"reps"	TEXT,
	"workout_id"	INTEGER,
	FOREIGN KEY("workout_id") REFERENCES "workouts"("ID"),
	PRIMARY KEY("ID" AUTOINCREMENT)
);
COMMIT;
